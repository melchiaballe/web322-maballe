<div class="container">
  <div class="d-flex justify-content-center align-items-end gap-5">
    <div class="form-container">
      <div class="card d-flex flex-row">
        <div class="image-container">
          <img src="images/sign-up.jpg" />
        </div>
        <form>
          <div class="d-flex flex-column justify-content-center text-center">
            <h5>Sign Up</h5>
            <p>Already a member? <a href="/log-in">Log in</a></p>
          </div>
          <div class="name-fields-container">
            <div class="form-group">
              <label class="form-label" for="fname">First Name</label>
              <input type="text" class="form-control" id="fname" placeholder="Enter firstname">
            </div>
            <div class="form-group">
              <label class="form-label" for="lname">Last Name</label>
              <input type="text" class="form-control" id="lname" placeholder="Enter lastname">
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email address">
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" autocomplete="current-password">
          </div>
          <button class="btn w-full">
            Sign up
          </button>
        </form>
      </div>
    </div>
  </div>
</div>